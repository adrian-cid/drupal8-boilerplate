/**
 * Implements hook_preprocess_node().
 */
function boilerplate_preprocess_node(&$variables) {
  // Alter variables passed to node templates.
  switch ($variables['node']->getType()) {
    case 'page':
      $variables['boilerplate'] = REQUEST_TIME;
      break;
  }
}

